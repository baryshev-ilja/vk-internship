{
  "compilerOptions": {
    "target": "esnext",
    "lib": ["esnext"],
    "module": "ESNext",
    "skipLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"]
    },

    /* Bundler mode */
    "moduleResolution": "Node",
    /* "allowImportingTsExtensions": true, */
    "isolatedModules": true,
    /* "moduleDetection": "force", */
    "noEmit": true,

    /* Linting */
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true
  },
  "include": ["vite.config.ts"]
}
